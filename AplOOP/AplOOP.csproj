    <Message Text="Copy files from '@(AplBase1Files)' to '@(AplBuildFolder)' ." Importance="high" />
    <Copy SourceFiles="@(AplBase1Files)" DestinationFolder="@(AplBuildFolder)" />
  
    <Message Text="Copy files from '@(AplDllReferences)' to '@(AplBuildFolder)' ." Importance="high" />
    <Copy SourceFiles="@(AplDllReferences)" DestinationFolder="@(AplBuildFolder)" />
    
    <Message Text="APL compile:  @(AplBuildFolder)@(DyalogCompiler) /v /multihost /t:library /o:@(AplBaseDll) @(AplBaseFile) " Importance="high" />
